<Window x:Class="CustomStreamDeck.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomStreamDeck"
        mc:Ignorable="d"
        Title="Categories" Height="420" Width="438">
    <Grid>
        <Button x:Name="btn_CreateCat" Content="Create Category" HorizontalAlignment="Left" Margin="334,85,0,0" VerticalAlignment="Top" Click="btn_CreateCat_Click"/>
        <Button x:Name="btn_DeleteCat" Content="Delete Category" HorizontalAlignment="Left" Margin="334,124,0,0" VerticalAlignment="Top" Click="btn_DeleteCat_Click"/>
        <Button x:Name="btn_Apply" Content="Apply" HorizontalAlignment="Left" Margin="359,343,0,0" VerticalAlignment="Top" Width="65" Click="btn_Apply_Click"/>
        <ListBox x:Name="lb_Categories" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,260,10"/>
    </Grid>
</Window>

<Window x:Class="CustomStreamDeck.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomStreamDeck"
        mc:Ignorable="d"
        Title="Categories" Height="420" Width="438">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="30,30,30,30"/>


        <Button Content="Create Category" Margin="28,30,28,0" VerticalAlignment="Top" Height="20" Grid.Column="1"/>
        <Button Content="Edit Category" Margin="28,70,28,0" VerticalAlignment="Top" Height="20" Grid.Column="1"/>
        <Button Content="Delete Category" Margin="28,110,28,0" Grid.Column="1" Height="20" VerticalAlignment="Top"/>

        <Button Content="Apply" Margin="40,0,40,30" Grid.Column="1" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</Window>

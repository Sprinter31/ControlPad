<Window x:Class="ControlPad.Windows.SelectFunctionPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad.Windows"
        mc:Ignorable="d"
        Title="SelectFunctionPopup" Height="600" Width="450">
    <DockPanel>
        <Button Content="Add Control" DockPanel.Dock="Top" Click="AddControl_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ControlContainer"/>
        </ScrollViewer>
    </DockPanel>
</Window>

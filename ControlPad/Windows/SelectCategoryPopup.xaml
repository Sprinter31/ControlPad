<Window x:Class="ControlPad.Windows.SelectCategoryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad.Windows"
        mc:Ignorable="d"
        
        WindowStartupLocation="CenterOwner"
        Title="Please select category" Height="115" Width="384" ResizeMode="NoResize">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="330"/>
            <ColumnDefinition Width="*" MinWidth="320"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="cb_Categories" Margin="10,10,10,0" VerticalAlignment="Top" Height="25"/>
        <Button x:Name="btn_Remove" Width="28" Height="25" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" Click="btn_Remove_Click">
            <Image x:Name="ButtonImage"  Stretch="Fill"/>
        </Button>

        <Button x:Name="btn_Cancel" Content="Cancel" Margin="0,0,10,10" HorizontalAlignment="Right" Width="64" Height="20" VerticalAlignment="Bottom" Click="btn_Cancel_Click"/>
        <Button x:Name="btn_Apply" Content="Apply" Margin="0,0,80,10" HorizontalAlignment="Right" Width="64" Height="20" VerticalAlignment="Bottom" Click="btn_Apply_Click"/>

    </Grid>
</Window>

<Window x:Class="ControlPad.Windows.SelectCategoryPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad.Windows"
        mc:Ignorable="d"
        
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Please select category"
        Height="110"
        Width="400">
    <Grid>
        <ComboBox x:Name="cb_Categories" Margin="10,10,10,0" VerticalAlignment="Top" Height="20"/>
        <Button x:Name="btn_Cancel" Content="Cancel" Margin="0,0,10,10" HorizontalAlignment="Right" Width="64" Height="20" VerticalAlignment="Bottom" Click="btn_Cancel_Click"/>
        <Button x:Name="btn_Apply" Content="Apply" Margin="0,0,80,10" HorizontalAlignment="Right" Width="64" Height="20" VerticalAlignment="Bottom" Click="btn_Apply_Click"/>

    </Grid>
</Window>

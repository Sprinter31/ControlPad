<Window x:Class="ControlPad.ProcessSelectPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
           
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="ProcessSelectPopup">

    <StackPanel Margin="12">
        <TextBlock Text="Bitte einen laufenden Prozess auswählen:" Margin="0,0,0,6"/>

        <!-- zeigt nur den Namen an, speichert aber das ganze Process-Objekt -->
        <ComboBox x:Name="ProcessCombo"
                  DisplayMemberPath="ProcessName"
                  Width="260"
                  IsEditable="False"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK"  Width="70" Margin="0,0,6,0"/>
            <Button Content="Abbrechen" Width="70"/>
        </StackPanel>
    </StackPanel>
</Window>

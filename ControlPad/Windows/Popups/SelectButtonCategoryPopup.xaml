<ui:FluentWindow x:Class="ControlPad.SelectButtonCategoryPopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
                 
        Icon="pack://application:,,,/Resources/logo.ico"         
        Background="Black"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinHeight="100"
        Height="100"
        Width="400">
    <Grid>

        <ComboBox x:Name="cb_Categories" Margin="10,10,60,0" VerticalAlignment="Top" Height="36"/>
        <Button x:Name="btn_Remove" Width="47" Height="36" Margin="345,10,0,0" Click="btn_Remove_Click" VerticalAlignment="Top">
            <ui:SymbolIcon Panel.ZIndex="10" Symbol="Delete12" Width="20" Height="20"/>
        </Button>

        <Button x:Name="btn_Cancel" Content="Cancel" Margin="0,0,8,3" HorizontalAlignment="Right" Width="64" Height="33" VerticalAlignment="Bottom" Click="btn_Cancel_Click"/>
        <Button x:Name="btn_Apply" Content="Apply" Margin="0,0,80,3" HorizontalAlignment="Right" Width="64" Height="33" VerticalAlignment="Bottom" Click="btn_Apply_Click"/>

    </Grid>
</ui:FluentWindow>

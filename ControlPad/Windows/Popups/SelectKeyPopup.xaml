<ui:FluentWindow x:Class="ControlPad.SelectKeyPopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        Title="SelectKeyPopup" Height="500" Width="300" Background="Black">
    
    <DockPanel>
        <ui:TitleBar DockPanel.Dock="Top" x:Name="TitleBarSelectKeyPopup"
        Title="Please Select a key"
        Icon="{ui:ImageIcon 'pack://application:,,,/Resources/logo.ico'}"/>

        <Grid>
            <TreeView AllowDrop="True">
                <TreeViewItem Header="Alphanumeric">
                    <TreeViewItem Header="Letters (A-Z)">
                        <TreeViewItem Header="A" />
                        <TreeViewItem Header="B" />
                        <TreeViewItem Header="C" />
                        <TreeViewItem Header="D" />
                        <TreeViewItem Header="E" />
                        <TreeViewItem Header="F" />
                        <TreeViewItem Header="G" />
                        <TreeViewItem Header="H" />
                        <TreeViewItem Header="I" />
                        <TreeViewItem Header="J" />
                        <TreeViewItem Header="K" />
                        <TreeViewItem Header="L" />
                        <TreeViewItem Header="M" />
                        <TreeViewItem Header="N" />
                        <TreeViewItem Header="O" />
                        <TreeViewItem Header="P" />
                        <TreeViewItem Header="Q" />
                        <TreeViewItem Header="R" />
                        <TreeViewItem Header="S" />
                        <TreeViewItem Header="T" />
                        <TreeViewItem Header="U" />
                        <TreeViewItem Header="V" />
                        <TreeViewItem Header="W" />
                        <TreeViewItem Header="X" />
                        <TreeViewItem Header="Y" />
                        <TreeViewItem Header="Z" />
                    </TreeViewItem>
                    <TreeViewItem Header="Numbers (0-9)">
                        <TreeViewItem Header="0" />
                        <TreeViewItem Header="1" />
                        <TreeViewItem Header="2" />
                        <TreeViewItem Header="3" />
                        <TreeViewItem Header="4" />
                        <TreeViewItem Header="5" />
                        <TreeViewItem Header="6" />
                        <TreeViewItem Header="7" />
                        <TreeViewItem Header="8" />
                        <TreeViewItem Header="9" />
                    </TreeViewItem>
                </TreeViewItem>
                <TreeViewItem Header="Edit">
                    <TreeViewItem Header="Cut (Ctrl+X)" />
                    <TreeViewItem Header="Copy (Ctrl+C)" />
                    <TreeViewItem Header="Paste (Ctrl+V)" />
                    <TreeViewItem Header="Undo (Ctrl+Z)" />
                    <TreeViewItem Header="Redo (Ctrl+Y)" />
                    <TreeViewItem Header="Delete" />
                    <TreeViewItem Header="Backspace" />
                </TreeViewItem>
                <TreeViewItem Header="Symbols">
                    <TreeViewItem Header="Exclamation (!)" />
                    <TreeViewItem Header="At (@)" />
                    <TreeViewItem Header="Hash (#)" />
                    <TreeViewItem Header="Dollar ($)" />
                    <TreeViewItem Header="Percent (%)" />
                    <TreeViewItem Header="Ampersand ()" />
                    <TreeViewItem Header="Asterisk (*)" />
                </TreeViewItem>
                <TreeViewItem Header="Input Mode">
                    <TreeViewItem Header="Insert" />
                    <TreeViewItem Header="Overwrite" />
                </TreeViewItem>
                <TreeViewItem Header="Function">
                    <TreeViewItem Header="F1" />
                    <TreeViewItem Header="F2" />
                    <TreeViewItem Header="F3" />
                    <TreeViewItem Header="F4" />
                    <TreeViewItem Header="F5" />
                    <TreeViewItem Header="F6" />
                    <TreeViewItem Header="F7" />
                    <TreeViewItem Header="F8" />
                    <TreeViewItem Header="F9" />
                    <TreeViewItem Header="F10" />
                    <TreeViewItem Header="F11" />
                    <TreeViewItem Header="F12" />
                    <TreeViewItem Header="F13" />
                    <TreeViewItem Header="F14" />
                    <TreeViewItem Header="F15" />
                    <TreeViewItem Header="F16" />
                    <TreeViewItem Header="F17" />
                    <TreeViewItem Header="F18" />
                    <TreeViewItem Header="F19" />
                    <TreeViewItem Header="F20" />
                    <TreeViewItem Header="F21" />
                    <TreeViewItem Header="F22" />
                    <TreeViewItem Header="F23" />
                    <TreeViewItem Header="F24" />
                </TreeViewItem>
                <TreeViewItem Header="Commands">
                    <TreeViewItem Header="Enter" />
                    <TreeViewItem Header="Escape (Esc)" />
                    <TreeViewItem Header="Tab" />
                </TreeViewItem>
                <TreeViewItem Header="Navigation">
                    <TreeViewItem Header="Home" />
                    <TreeViewItem Header="End" />
                    <TreeViewItem Header="Page Up" />
                    <TreeViewItem Header="Page Down" />
                </TreeViewItem>
                <TreeViewItem Header="Arrows">
                    <TreeViewItem Header="Arrow Up" />
                    <TreeViewItem Header="Arrow Down" />
                    <TreeViewItem Header="Arrow Left" />
                    <TreeViewItem Header="Arrow Right" />
                </TreeViewItem>
                <TreeViewItem Header="Numpad (Numeric Keypad)">
                    <TreeViewItem Header="Numpad 0–9">
                        <TreeViewItem Header="0" />
                        <TreeViewItem Header="1" />
                        <TreeViewItem Header="2" />
                        <TreeViewItem Header="3" />
                        <TreeViewItem Header="4" />
                        <TreeViewItem Header="5" />
                        <TreeViewItem Header="6" />
                        <TreeViewItem Header="7" />
                        <TreeViewItem Header="8" />
                        <TreeViewItem Header="9" />
                    </TreeViewItem>
                    <TreeViewItem Header="Numpad +" />
                    <TreeViewItem Header="Numpad -" />
                    <TreeViewItem Header="Numpad *" />
                    <TreeViewItem Header="Numpad /" />
                    <TreeViewItem Header="Numpad Enter" />
                    <TreeViewItem Header="Numpad ." />
                </TreeViewItem>
                <TreeViewItem Header="Modifier">
                    <TreeViewItem Header="Shift" />
                    <TreeViewItem Header="Control (Ctrl)" />
                    <TreeViewItem Header="Alt" />
                    <TreeViewItem Header="AltGr" />
                    <TreeViewItem Header="Windows (Win)" />
                    <TreeViewItem Header="Command (Mac)" />
                </TreeViewItem>
            </TreeView>
        </Grid>
    </DockPanel>
</ui:FluentWindow>

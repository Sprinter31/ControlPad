<ui:FluentWindow x:Class="ControlPad.SelectKeyPopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResize"
        Icon="pack://application:,,,/Resources/logo.ico"
        Title="SelectKeyPopup" Height="500" Width="300" Background="Black">
    
    <DockPanel>
        <ui:TitleBar DockPanel.Dock="Top" x:Name="TitleBarSelectKeyPopup"
        Icon="{ui:ImageIcon 'pack://application:,,,/Resources/logo.ico'}"/>

        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                   Text="Please Select a key:"
                   Margin="0,0,0,8"
                   FontWeight="Bold"/>

            <TreeView x:Name="TreeViewKeys"
                  Grid.Row="1"
                  ItemsSource="{Binding KeyGroups}"
                  MouseDoubleClick="TreeViewKeys_MouseDoubleClick"
                  MinWidth="380" MinHeight="260">

                <!-- Kategorie -->
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type local:KeyGroup}"
                                          ItemsSource="{Binding Items}">
                        <TextBlock Text="{Binding Name}" FontWeight="DemiBold"/>
                    </HierarchicalDataTemplate>

                    <!-- Blatt -->
                    <DataTemplate DataType="{x:Type local:KeyCode}">
                        <TextBlock Text="{Binding Label}"/>
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="BtnOk" Content="OK" Width="90" Margin="0,0,8,0"
                    IsDefault="True" Click="Ok_Click"/>
                <Button Content="Cancel" Width="90" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow>

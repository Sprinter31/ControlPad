<ui:FluentWindow x:Class="ControlPad.SelectSliderCategoryPopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Resources/logo.ico"
        Background="Black"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        MinHeight="90"
        Height="100"
        Width="422">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="cb_Categories" Margin="10,10,0,0" VerticalAlignment="Top" Height="36"/>
        <Button Grid.Column="1" x:Name="btn_Remove" Width="64" Height="36" Margin="10,10,10,0" Click="btn_Remove_Click" VerticalAlignment="Top" HorizontalAlignment="Right">
            <ui:SymbolIcon Panel.ZIndex="10" Symbol="Delete12" Width="20" Height="20"/>
        </Button>

        <Button Grid.Column="1" Grid.Row="1" x:Name="btn_Cancel" Content="Cancel" Margin="10,0,10,10" HorizontalAlignment="Right" Width="64" Height="33" VerticalAlignment="Bottom" Click="btn_Cancel_Click"/>
        <Button Grid.Column="0" Grid.Row="1" x:Name="btn_Apply" Content="Apply" Margin="10,0,0,10" HorizontalAlignment="Right" Width="64" Height="33" VerticalAlignment="Bottom" Click="btn_Apply_Click"/>

    </Grid>
</ui:FluentWindow>

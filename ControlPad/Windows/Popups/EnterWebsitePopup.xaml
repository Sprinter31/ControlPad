<ui:FluentWindow x:Class="ControlPad.EnterWebsitePopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        
        Icon="pack://application:,,,/Resources/logo.ico"        
                 WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="Please enter a website URL" Width="400" Height="140" MinHeight="20" MinWidth="20" Background="Black">
    
    <DockPanel>
        <ui:TitleBar
     DockPanel.Dock="Top" x:Name="TitleBarEnterWebsite"
             Title="Please enter a website URL"
             Icon="{ui:ImageIcon 'pack://application:,,,/Resources/logo.ico'}"/>
        
        <Grid>
            <ui:TextBox x:Name="tb_WebsiteURL"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="10 5"
                      Width="380"
                      PlaceholderText="https://example.com"
                      TextChanged="tb_WebsiteURL_TextChanged"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,40,10,0">
                <Button x:Name="btn_Ok" Content="OK"  Width="70" Margin="0,0,6,0" Click="btn_Ok_Click" IsEnabled="false"/>
                <Button x:Name="btn_Cancel" Content="Cancel" Width="70" Click="btn_Cancel_Click"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow>

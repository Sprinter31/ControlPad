<ui:FluentWindow x:Class="ControlPad.ProcessActionSettingsPopup"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        Title="ProcessActionSettingsPopup" Height="110" Width="400">
    
    <DockPanel>
        <ui:TitleBar
     DockPanel.Dock="Top" x:Name="titleBarProcessActionSettingsPopup"
             Title="Control Pad"
             Icon="pack://application:,,,/ControlPad;Resources/logo.png"/>
      
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Border BorderBrush="DimGray" BorderThickness="1" CornerRadius="5" Height="22" VerticalAlignment="Top">
                <TextBlock x:Name="TextBlock_ProcessName" Text="asdfaasfdasdf" Margin="5 0 0 0"/>
            </Border>
            <Button x:Name="btn_SelectProcess" Grid.Column="1" Content="Select Process" Margin="10,1,0,0" VerticalAlignment="Top" Click="btn_SelectProcess_Click"/>
        </Grid>
    </DockPanel>
</ui:FluentWindow>

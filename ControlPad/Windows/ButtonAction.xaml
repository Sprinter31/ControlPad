<UserControl x:Class="ControlPad.ButtonAction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlPad"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17"/>
            <ColumnDefinition Width="333"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- ComboBox HorizontalAlignment="Left" Margin="36,0,0,0" Width="340" Height="34"/> -->
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Height="34" >
            <TextBlock x:Name="Text" Text="&lt;Action&gt;" Margin="5" Height="24" FontSize="16"/>
        </Border>
        <Button x:Name="btn_Settings" Content="⚙" Height="34" Width="42.5" Grid.Column="2" Margin="5,0,0,0"/>
        <Button x:Name="btn_Remove" Content="❌" Foreground="Red" Height="35" Width="43" Grid.Column="2" Margin="52,0,0,0"/>
        <Rectangle HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="7" Fill="DimGray"/>
    </Grid>
</UserControl>

<ui:FluentWindow x:Class="ControlPad.EditButtonCategoryWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Resources/logo.ico"
        Title="EditButtonCategoryWindow" Height="600" Width="450" Background="Black">
    <DockPanel>
        <ui:TitleBar
             DockPanel.Dock="Top" x:Name="TitleBarEditButtonCategoryWindow"
             Title="Select an action"
             Icon="{ui:ImageIcon 'pack://application:,,,/Resources/logo.ico'}"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ui:TextBox x:Name="tb_CategoryName" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="CategoryName" VerticalAlignment="Top" Height="35" Grid.ColumnSpan="2" Margin="10,10,10,0" PlaceholderText="Category Name"/>
            
            <Label Grid.Row="1" Content="Select type:" FontSize="14" Margin="10 9"/>
            <ComboBox Grid.Row="1" x:Name="ComboBox_Type" Width="329" Margin="10 32 0 10" VerticalAlignment="Top" SelectedIndex="0"/>
            <Button Grid.Row="1"  Content="Add Action" Click="btn_AddAction_Click" Height="37" Width="100" Margin="0 32 10 0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="1"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" Grid.ColumnSpan="2">
                <StackPanel x:Name="ActionsContainer"/>
            </ScrollViewer>

            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button x:Name="BtnOk" Content="OK" Width="90" Margin="0,0,8,0" IsDefault="True" Click="BtnOk_Click" />
                <Button Content="Cancel" Width="90" IsCancel="True"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow>

<ui:FluentWindow x:Class="ControlPad.EditSliderCategoryWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        Icon="pack://application:,,,/Resources/logo.ico"
        Background="Black"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Title="EditSliderCategoryWindow" Height="420" Width="438">

    <DockPanel>
        <ui:TitleBar
         DockPanel.Dock="Top" x:Name="TitleBarEditButtonCategoryWindow"
         Title="Select an action"
         Icon="{ui:ImageIcon 'pack://application:,,,/Resources/logo.ico'}"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ListBox x:Name="lb_Processes" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,30,30,30" Grid.Row="1"/>

            <Button x:Name="btn_AddProcess" Content="Add Process" Margin="0,10,0,0" VerticalAlignment="Top" Height="33" Grid.Column="1" Click="btn_AddProcess_Click" Width="126" HorizontalAlignment="Center" Grid.Row="1"/>
            <Button x:Name="btn_RemoveProcess" Content="Remove Process" Margin="0,50,0,0" Grid.Column="1" Height="33" VerticalAlignment="Top" Click="btn_RemoveProcess_Click" HorizontalAlignment="Center" Grid.Row="1" Width="126" />

            <Button x:Name="btn_Close" Content="Close" Margin="0,250,0,0" Grid.Column="1" Height="33" VerticalAlignment="Bottom" Click="btn_Close_Click" HorizontalAlignment="Center" Grid.Row="1"/>
            <Label Content="Processes:" HorizontalAlignment="Left" VerticalAlignment="Top" Width="232" FontSize="14" Height="30" Grid.Row="1" Margin="20,0,0,0"/>
            <TextBox x:Name="tb_CategoryName" HorizontalAlignment="Center" TextWrapping="Wrap" Text="CategoryName" VerticalAlignment="Top" Height="35" Grid.ColumnSpan="2" Margin="10" Width="428"/>
        </Grid>
    </DockPanel>
</ui:FluentWindow>
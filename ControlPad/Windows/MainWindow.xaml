<Window x:Name="mainWindow" x:Class="ControlPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlPad"
        mc:Ignorable="d"
        Title="Control Pad" Width="651" Height="600"
        Background="White" ResizeMode="NoResize" Closing="mainWindow_Closing" Closed="mainWindow_Closed">

    <Window.Resources>
        <Style x:Key="InvisibleRepeatButton" TargetType="RepeatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Rectangle Fill="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background"   Value="Transparent"/>
            <Setter Property="BorderBrush"  Value="Transparent"/>
            <Setter Property="IsTabStop"    Value="False"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="VerticalBarSlider" TargetType="Slider">
            <Setter Property="Orientation"   Value="Vertical"/>
            <Setter Property="Minimum"       Value="0"/>
            <Setter Property="Maximum"       Value="1024"/>
            <Setter Property="IsEnabled"     Value="False"/>
            <Setter Property="Value"         Value="50"/>
            <Setter Property="Width"         Value="10"/>
            <Setter Property="Margin"        Value="10"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Black Line -->
                            <Rectangle Width="4"
                               Fill="Black"
                               HorizontalAlignment="Center"/>

                            <!-- Logic -->
                            <Track x:Name="PART_Track"
                           Orientation="Vertical">

                                <!-- Upper area (Decrease) -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                          Style="{StaticResource InvisibleRepeatButton}"/>
                                </Track.DecreaseRepeatButton>

                                <!-- lower area (Increase) -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                          Style="{StaticResource InvisibleRepeatButton}"/>
                                </Track.IncreaseRepeatButton>

                                <!-- Thumb -->
                                <Track.Thumb>
                                    <Thumb Margin="-7,0,-7,0" Width="24" Height="50"
                                   Background="DarkGray"
                                   BorderBrush="Black"
                                   BorderThickness="1"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Black Buttons -->
        <Style x:Key="SquareButton" TargetType="Button">
            <Setter Property="Width"        Value="60"/>
            <Setter Property="Height"       Value="60"/>
            <Setter Property="Background"   Value="Black"/>
            <Setter Property="BorderBrush"  Value="Black"/>
            <Setter Property="Foreground"   Value="White"/>
            <Setter Property="Margin"       Value="10"/>
        </Style>

        <Style x:Key="SliderLabel" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment"       Value="Center"/>
            <Setter Property="TextWrapping"        Value="Wrap"/>
            <Setter Property="Margin"              Value="0,0,0,5"/>
            <Setter Property="FontSize"            Value="14"/>
            <Setter Property="FontWeight"          Value="SemiBold"/>
        </Style>

        <!-- Border -->
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="BorderBrush"      Value="Black"/>
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Visibility"       Value="Hidden"/>
            <Setter Property="BorderThickness"  Value="1"/>
            <Setter Property="Panel.ZIndex"     Value="1"/>
        </Style>
    </Window.Resources>


    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top" Background="AliceBlue">
            <MenuItem Header="_File">
                <MenuItem x:Name="btn_ManageSliderCategories" Header="_Manage Slider Categories" Click="ManageSliderCategories_Click"/>
                <MenuItem Header="Preferences"/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem x:Name="cb_EditMode" IsCheckable="True" Header="Edit Mode" Checked="cb_EditMode_Checked" Unchecked="cb_EditMode_Unchecked"/>
                <MenuItem Header="_Paste"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- ===== Layout ===== -->
        <Grid>
            <Grid Height="500">
                <!-- 6 Slider Columns + 1 Button Column -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- first row texts, second row Sliders, third row Buttons -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" Cursor="Hand"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Labels -->
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="0" Text="Spotify"/>
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="1" Text="Browser"/>
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="2" Text="Satisfactory"/>
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="3" Text="Discord"/>
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="4" Text="Monitor Brightness"/>
                <TextBlock Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="5" Text="Mic"/>

                
                
                <!-- Border -->
                <local:SliderBorder x:Name="SliderCell1" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="0" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider1}"/>
                <local:SliderBorder x:Name="SliderCell2" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="1" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider2}"/>
                <local:SliderBorder x:Name="SliderCell3" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider3}"/>
                <local:SliderBorder x:Name="SliderCell4" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="3" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider4}"/>
                <local:SliderBorder x:Name="SliderCell5" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="4" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider5}"/>
                <local:SliderBorder x:Name="SliderCell6" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="5" MouseLeftButtonDown="SliderCell_Click" CategorySlider="{Binding ElementName=Slider6}"/>

                <!-- Slider -->
                <local:CategorySlider x:Name="Slider1" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
                <local:CategorySlider x:Name="Slider2" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>
                <local:CategorySlider x:Name="Slider3" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"/>
                <local:CategorySlider x:Name="Slider4" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center"/>
                <local:CategorySlider x:Name="Slider5" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center"/>
                <local:CategorySlider x:Name="Slider6" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center"/>

                <!-- Mute Buttons -->
                <Button x:Name="Switch1" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="0" Content="Mute"/>
                <Button x:Name="Switch2" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="1" Content="Mute"/>
                <Button x:Name="Switch3" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="2" Content="Mute"/>
                <Button x:Name="Switch4" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="3" Content="Mute"/>
                <Button x:Name="Switch5" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="4" Content="Mute"/>
                <Button x:Name="Switch6" Style="{StaticResource SquareButton}" Grid.Row="2" Grid.Column="5" Content="Mute"/>

                <!-- Button Column -->
                <StackPanel Grid.Column="6" Grid.RowSpan="2"
                 VerticalAlignment="Center" Height="420">
                    <Button x:Name="Switch7" Style="{StaticResource SquareButton}" Content="Pause"/>
                    <Button x:Name="Switch8" Style="{StaticResource SquareButton}" Content="Next"/>
                    <Button x:Name="Switch9" Style="{StaticResource SquareButton}" Content="Discord"/>
                    <Button x:Name="Switch10" Style="{StaticResource SquareButton}" Content="Browser"/>
                    <Button x:Name="Switch11" Style="{StaticResource SquareButton}" Content="E"/>
                </StackPanel>
            </Grid>
        </Grid>
    </DockPanel>
</Window>

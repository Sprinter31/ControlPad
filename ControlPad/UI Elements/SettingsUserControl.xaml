<UserControl x:Class="ControlPad.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlPad"
             mc:Ignorable="d" 
             Height="536.04" Width="581"
             >

    <Border Padding="16">
        <StackPanel>

            <!-- Header -->
            <Label Content="Settings"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Padding="0"
                   Margin="0,0,0,4"/>
            <Label Content="Adjust how the app starts, behaves in the tray, and looks."
                   Padding="0"
                   Margin="0,0,0,8"
                   Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>

            <Separator/>

            <!-- Start with Windows -->
            <Grid Margin="0,8,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                    <!-- Label with mnemonic + Target -->
                    <Label Content="_Start with Windows"
                           Padding="0"
                           Target="{Binding ElementName=StartWithWindowsCheckBox}"/>
                    <Label Content="Launch the app automatically after you sign in."
                           Padding="0"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </StackPanel>

                <CheckBox x:Name="StartWithWindowsCheckBox"
                          Grid.Column="1"
                          VerticalAlignment="Center"/>
            </Grid>

            <Separator/>

            <!-- Minimize to System Tray -->
            <Grid Margin="0,8,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                    <Label Content="Mi_nimize to system tray"
                           Padding="0"
                           Target="{Binding ElementName=MinimizeToTrayCheckBox}"/>
                    <Label Content="When closing, keep the app running in the notification area."
                           Padding="0"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </StackPanel>

                <CheckBox x:Name="MinimizeToTrayCheckBox"
                          Grid.Column="1"
                          VerticalAlignment="Center"/>
            </Grid>

            <Separator/>

            <!-- App Theme -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Margin="0,0,16,0">
                    <Label Content="App _theme"
                           Padding="0"
                           Target="{Binding ElementName=ThemeComboBox}"/>
                    <Label Content="Choose how the app looks."
                           Padding="0"
                           Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                </StackPanel>

                <ComboBox x:Name="ThemeComboBox"
                          Grid.Column="1"
                          MinWidth="180"
                          SelectedIndex="0"
                          VerticalAlignment="Center">
                    <ComboBoxItem Content="System (Default)"/>
                    <ComboBoxItem Content="Light"/>
                    <ComboBoxItem Content="Dark"/>
                </ComboBox>
            </Grid>

        </StackPanel>
    </Border>
</UserControl>

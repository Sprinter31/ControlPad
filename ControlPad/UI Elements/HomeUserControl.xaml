<UserControl x:Class="ControlPad.HomeUserControl"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlPad"
             mc:Ignorable="d" 
             d:DesignHeight="600" Width="Auto">

    <UserControl.Resources>
        <!-- Slider Style -->
        <Style x:Key="TopSlider" TargetType="RepeatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Rectangle Fill="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="BottomSlider" TargetType="RepeatButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border CornerRadius="0,0,4,4" Width="4" Background="#3dabff"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="VerticalBarSlider" TargetType="Slider">
            <Setter Property="Orientation"   Value="Vertical"/>
            <Setter Property="Maximum"       Value="1024"/>
            <Setter Property="IsEnabled"     Value="False"/>
            <Setter Property="Margin"        Value="10"/>
            <Setter Property="TickFrequency" Value="102.4"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Linke TickBar -->
                            <TickBar x:Name="TickBarLeft"
                             Fill="#454545"
                             Placement="Left"
                             Height="Auto"
                             Width="6"
                             Margin="0,0,28,0"
                             IsDirectionReversed="True"
                             TickFrequency="{TemplateBinding TickFrequency}"/>

                            <!-- Rechte TickBar -->
                            <TickBar x:Name="TickBarRight"
                             Fill="#454545"
                             Placement="Right"
                             Height="Auto"
                             Width="6"
                             Margin="28,0,0,0"
                             IsDirectionReversed="False"
                             TickFrequency="{TemplateBinding TickFrequency}"/>

                            <Rectangle Width="4"
                               Fill="#999a9b"
                               HorizontalAlignment="Center"
                               RadiusX="2"
                               RadiusY="2"/>

                            <Track x:Name="PART_Track"
                                   Orientation="Vertical">

                                <!-- Upper area (Decrease) -->
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge"
                                                  Style="{StaticResource BottomSlider}"/>
                                </Track.DecreaseRepeatButton>

                                <!-- lower area (Increase) -->
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge"
                                                  Style="{StaticResource TopSlider}"/>
                                </Track.IncreaseRepeatButton>

                                <!-- Thumb -->
                                <Track.Thumb>
                                    <Thumb Width="24" Height="24">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#3dabff"
                                                        BorderBrush="#454545"
                                                        BorderThickness="4"
                                                        CornerRadius="100"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>

                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="SliderLabel" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment"       Value="Center"/>
            <Setter Property="TextWrapping"        Value="Wrap"/>
            <Setter Property="Margin"              Value="0,0,0,5"/>
            <Setter Property="FontSize"            Value="14"/>
            <Setter Property="FontWeight"          Value="SemiBold"/>
            <Setter Property="Foreground"          Value="White"/>
        </Style>

        <!-- Border -->
        <Style x:Key="Border" TargetType="Border">
            <Setter Property="BorderBrush"      Value="#2d2d2d"/>
            <Setter Property="Background"       Value="Transparent"/>
            <Setter Property="Cursor"           Value="Hand"/>
            <Setter Property="Visibility"       Value="Hidden"/>
            <Setter Property="BorderThickness"  Value="4"/>
            <Setter Property="Margin"           Value="1"/>
            <Setter Property="CornerRadius"     Value="4"/>
            <Setter Property="Panel.ZIndex"     Value="1"/>
        </Style>

        <Style TargetType="{x:Type local:CustomButton}" BasedOn="{StaticResource {x:Type ToggleButton}}"/>
    </UserControl.Resources>
    <!-- ===== Layout ===== -->
    <Grid>
        <!-- 6 Slider Columns + 1 Button Column -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <!-- first row texts, second row Sliders, third row Buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Text Blocks -->
        <TextBlock x:Name="TextBlock1" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="0" Text=""/>
        <TextBlock x:Name="TextBlock2" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="1" Text=""/>
        <TextBlock x:Name="TextBlock3" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="2" Text=""/>
        <TextBlock x:Name="TextBlock4" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="3" Text=""/>
        <TextBlock x:Name="TextBlock5" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="4" Text=""/>
        <TextBlock x:Name="TextBlock6" Style="{StaticResource SliderLabel}" Grid.Row="0" Grid.Column="5" Text=""/>

        <!-- Border -->
        <local:SliderBorder x:Name="SliderCell1" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="0" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider1}"/>
        <local:SliderBorder x:Name="SliderCell2" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="1" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider2}"/>
        <local:SliderBorder x:Name="SliderCell3" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider3}"/>
        <local:SliderBorder x:Name="SliderCell4" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="3" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider4}"/>
        <local:SliderBorder x:Name="SliderCell5" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="4" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider5}"/>
        <local:SliderBorder x:Name="SliderCell6" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="5" MouseLeftButtonDown="SliderCell_Click" CustomSlider="{Binding ElementName=Slider6}"/>
        <local:ButtonBorder x:Name="ButtonCell1" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="0" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch1}"/>
        <local:ButtonBorder x:Name="ButtonCell2" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="1" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch2}"/>
        <local:ButtonBorder x:Name="ButtonCell3" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch3}"/>
        <local:ButtonBorder x:Name="ButtonCell4" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="3" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch4}"/>
        <local:ButtonBorder x:Name="ButtonCell5" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="4" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch5}"/>
        <local:ButtonBorder x:Name="ButtonCell6" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="5" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch6}"/>
   
        <!-- Slider -->
        <local:CustomSlider x:Name="Slider1" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock1}"/>
        <local:CustomSlider x:Name="Slider2" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock2}"/>
        <local:CustomSlider x:Name="Slider3" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock3}"/>
        <local:CustomSlider x:Name="Slider4" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock4}"/>
        <local:CustomSlider x:Name="Slider5" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock5}"/>
        <local:CustomSlider x:Name="Slider6" Style="{StaticResource VerticalBarSlider}" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" TextBlock="{Binding ElementName=TextBlock6}"/>

        <!-- Mute Buttons -->
        <local:CustomButton x:Name="Switch1" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" Padding="2" TextBlock="{Binding ElementName=Switch2_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch1_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>
        <local:CustomButton x:Name="Switch2" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" Padding="2" TextBlock="{Binding ElementName=Switch2_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch2_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>
        <local:CustomButton x:Name="Switch3" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" Padding="2" TextBlock="{Binding ElementName=Switch3_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch3_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>
        <local:CustomButton x:Name="Switch4" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="3" Padding="2" TextBlock="{Binding ElementName=Switch4_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch4_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>
        <local:CustomButton x:Name="Switch5" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="4" Padding="2" TextBlock="{Binding ElementName=Switch5_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch5_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>
        <local:CustomButton x:Name="Switch6" Width="60" Height="60" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="5" Padding="2" TextBlock="{Binding ElementName=Switch6_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
            <Viewbox Stretch="Uniform">
                <TextBlock x:Name="Switch6_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
            </Viewbox>
        </local:CustomButton>

        <!-- Button Column -->
        <Grid Grid.Row="1" Grid.Column="6">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <local:ButtonBorder x:Name="ButtonCell7" Style="{StaticResource Border}" Grid.Row="0" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch7}"/>
            <local:ButtonBorder x:Name="ButtonCell8" Style="{StaticResource Border}" Grid.Row="1" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch8}"/>
            <local:ButtonBorder x:Name="ButtonCell9" Style="{StaticResource Border}" Grid.Row="2" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch9}"/>
            <local:ButtonBorder x:Name="ButtonCell10" Style="{StaticResource Border}" Grid.Row="3" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch10}"/>
            <local:ButtonBorder x:Name="ButtonCell11" Style="{StaticResource Border}" Grid.Row="4" Grid.Column="2" MouseLeftButtonDown="ButtonCell_Click" CustomButton="{Binding ElementName=Switch11}"/>

            <local:CustomButton x:Name="Switch7" Grid.Row="0" Width="60" Height="60" Margin="10" Padding="2" TextBlock="{Binding ElementName=Switch7_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
                <Viewbox Stretch="Uniform">
                    <TextBlock x:Name="Switch7_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
                </Viewbox>
            </local:CustomButton>
            <local:CustomButton x:Name="Switch8" Grid.Row="1" Width="60" Height="60" Margin="10" Padding="2" TextBlock="{Binding ElementName=Switch8_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
                <Viewbox Stretch="Uniform">
                    <TextBlock x:Name="Switch8_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
                </Viewbox>
            </local:CustomButton>
            <local:CustomButton x:Name="Switch9" Grid.Row="2" Width="60" Height="60" Margin="10" Padding="2" TextBlock="{Binding ElementName=Switch9_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
                <Viewbox Stretch="Uniform">
                    <TextBlock x:Name="Switch9_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
                </Viewbox>
            </local:CustomButton>
            <local:CustomButton x:Name="Switch10" Grid.Row="3" Width="60" Height="60" Margin="10" Padding="2" TextBlock="{Binding ElementName=Switch10_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
                <Viewbox Stretch="Uniform">
                    <TextBlock x:Name="Switch10_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
                </Viewbox>
            </local:CustomButton>
            <local:CustomButton x:Name="Switch11" Grid.Row="4" Width="60" Height="60" Margin="10" Padding="2" TextBlock="{Binding ElementName=Switch11_TextBlock}" PreviewMouseDown="ToggleButton_PreviewMouseLeftButtonDown">
                <Viewbox Stretch="Uniform">
                    <TextBlock x:Name="Switch11_TextBlock" TextAlignment="Center" TextWrapping="NoWrap"/>
                </Viewbox>
            </local:CustomButton>
        
        
            </Grid>
    </Grid>
</UserControl>